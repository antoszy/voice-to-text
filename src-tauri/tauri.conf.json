  "productName": "voice-to-text",
  "version": "0.1.0",
  "identifier": "com.antoszy.voice-to-text",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Voice to Text",
